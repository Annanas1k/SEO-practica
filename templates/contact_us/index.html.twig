            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}

            <button type="submit">Send Message</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
