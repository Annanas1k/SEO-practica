{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Contact Us{% endblock %}

{% block body %}
<style>

    h1{
        font-weight: bold;
    }
    i, a {
        color: #e74c3c;
    }
    span {
        font-weight: bold;
    }
    p {
        font-weight: bold;
    }


    /* Stilizare generală pentru formular */
    .form-container {
        margin-top: 100px;
        margin-bottom: 100px;
    }

    .form-container form {
        max-width: 700px;
        margin: 0 auto;
        padding: 2em;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Stilizare pentru grupurile de formă */
    .form-container form > div {
        margin-bottom: 1.5em;
    }

    /* Stilizare pentru controalele formularului */
    .form-container input,
    .form-container textarea {
        width: 100%;
        padding: 0.75em;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1em;
        background-color: #fff;
    }

    /* Stilizare pentru buton */
    .form-container button[type="submit"] {
        display: inline-block;
        padding: 0.75em 1.5em;
        font-size: 1em;
        color: #fff;
        background-color: #e74c3c;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
    }

    .form-container button[type="submit"]:hover {
        background-color: #c0392b;
    }


</style>
    <div class="container" style="margin-top: 150px;">
        <h1 class="mt-5 mb-4 text-center">Contact Us</h1>
        <div class="row">
            <div class="col-md-4 text-center">
                <h3><i class="fas fa-map-marker-alt"></i>   Address</h3>
                <p>SEMSEO S.R.L.</p>
                <p>R.Moldova, or. Chisinau, MD-2038
                    <br>
                    str. Trandafirilor, 11/6, of. 101</p>
            </div>
            <div class="col-md-4 text-center">
                <h3><i class="fas fa-phone-alt"></i>    Phone Numbers</h3>
                <span>tel.: <a href="tel:+1234567890">(+373 22) 111-110</a></span><br>
                <span>mob.: <a href="tel:+0987654321">(373) 79550254</a></span><br>
                <span>mob.: <a href="tel:+0987654321">(373) 78505420</a></span><br>
            </div>
            <div class="col-md-4 text-center">
                <h3><i class="far fa-envelope"></i>     Email Addresses</h3>
                <span>Basic MailBox: <a href="mailto:office@semseo.md">office@semseo.md</a></span><br>
                <span>Sales departament: <a href="mailto:sale@semseo.md">sale@semseo.md</a></span><br>
                <span>Tehnical support: <a href="mailto:support@semseo.md">support@semseo.md</a></span><br>
                <span>Seo support: <a href="mailto:seo@semseo.md">seo@semseo.md</a></span><br>
            </div>
        </div>
        <div class="mt-5" style="margin-top: 100px;">
            <!-- Google Maps Embed API -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2721.229587458813!2d28.854443399999994!3d46.9964648!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40c9793811cd2d61%3A0x5ab05195719e6cbf!2sSEMSEO%20SRL!5e0!3m2!1sen!2s!4v1715845684917!5m2!1sen!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="mt-5 form-container">
            {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}

            <button type="submit">Send Message</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
